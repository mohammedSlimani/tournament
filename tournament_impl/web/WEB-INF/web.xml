<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">  
    <filter>
        <filter-name>AdminSessionFilter</filter-name>
        <filter-class>Filter.AdminSessionCheckFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>Filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RequestLogginFilter</filter-name>
        <filter-class>Filter.RequestLogginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CaptainSessionFilter</filter-name>
        <filter-class>Filter.CaptainSessionCheckFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ResponsibleSessionFilter</filter-name>
        <filter-class>Filter.ResponsibleSessionCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestLogginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ResponsibleSessionFilter</filter-name>
        <url-pattern>/responsible/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CaptainSessionFilter</filter-name>
        <url-pattern>/captain/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminSessionFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
